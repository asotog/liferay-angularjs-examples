<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>second-learning</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		
		<!-- AngularJS libs, loaded in header, this can be also included in the theme instead of here -->
        <!-- <header-portal-javascript>/angular-portlet/js/angularjs-1.2.3/angular.min.js</header-portal-javascript>
        <header-portal-javascript>/angular-portlet/js/angularjs-1.2.3/angular-route.min.js</header-portal-javascript>
        <header-portal-javascript>/angular-portlet/js/angularjs-1.2.3/angular-resource.min.js</header-portal-javascript> -->
		
		<!-- Angular application, loaded in footer -->
		<footer-portlet-javascript>/js/ng-app/app.js</footer-portlet-javascript>
		
		<!-- default for liferay portlet -->
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>second-learning-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>